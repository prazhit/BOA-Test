{% style %}
  .section-{{ section.id }} {
    padding: 30px 0;
  }

  .section-{{ section.id }}
  .title {
    text-align: center;
    font-size: {{ section.settings.title_font_size }}px;
    margin-bottom: 10px;
  }

  .section-{{ section.id }}
  .subtitle {
    text-align: center;
    font-size: {{ section.settings.subtitle_font_size }}px;
    margin-bottom: 40px;
    color: #666;
  }

  .section-{{ section.id }}
  .product-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.products_per_row }}, minmax(250px, 1fr));
    gap: 20px;
    margin: 0 auto;
  }

  @media screen and (max-width: 1200px) {
    .section-{{ section.id }} .product-grid {
      grid-template-columns: repeat(3, minmax(250px, 1fr));
    }
  }

  @media screen and (max-width: 900px) {
    .section-{{ section.id }} .product-grid {
      grid-template-columns: repeat(2, minmax(250px, 1fr));
    }
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }} .product-grid {
      grid-template-columns: 1fr;
    }
  }

{% endstyle %}
{{ 'test-product-card.css' | asset_url | stylesheet_tag }}

<div class="section-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="title">{{ section.settings.title | escape }}</h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle | escape }}</p>
    {% endif %}

    {% if template.name == 'collection' %}
        {% assign products_to_show = collection.products %}
        {% assign product_limit = 10 %}
    {% else %}
        {% assign products_to_show = section.settings.product_list %}
        {% assign product_limit = null %}
    {% endif %}

    {% if products_to_show != blank %}
      <div class="product-grid">
        {% for product in products_to_show limit: product_limit %}
            {% render 'test-product-card', product: product %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Featured Products",
    "tag": "section",
    "class": "featured-products-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Featured Products"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 20,
        "max": 48,
        "step": 2,
        "unit": "px",
        "label": "Title font size",
        "default": 32
      },
      {
        "type": "range",
        "id": "subtitle_font_size",
        "min": 14,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Subtitle font size",
        "default": 18
      },
      {
        "type": "product_list",
        "id": "product_list",
        "label": "Products",
        "limit": 12
      },
      {
        "type": "range",
        "id": "products_per_row",
        "min": 2,
        "max": 4,
        "step": 1,
        "label": "Products per row on desktop",
        "default": 4
      }
    ],
    "presets": [
      {
        "name": "Featured Products"
      }
    ],
    "enabled_on": {
        "templates": ["index", "page", "product", "collection"]
    }
  }
{% endschema %}